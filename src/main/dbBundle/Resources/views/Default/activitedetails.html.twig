                    {%else%}
                    <li href="#" class="list-group-item">No detail to show, this activity is not defined by a subphase.</li>
                    {%endif%}
                    {%if naturedetail is not empty%}
                    <li href="#" class="list-group-item">Linked to nature : {{naturedetail}}</li>       
                    {%else%}
                    <li href="#" class="list-group-item">This activity has no link with any nature.</li>
                    {%endif%}
            </div>

            <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal" align="center" style="margin-left: auto; margin-right: auto; display: block"><span class="glyphicon glyphicon-pencil"></span>  Edit</button>

            <a href="{{path('maindb_gestionactivite')}}">Go back to list</a>

            <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-dialog" style="width : 60%;">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                            <h4 class="modal-title" id="myModalLabel">Edit activity</h4>
                        </div>
                        <form class="form-horizontal" name="myform" role="form" data-validate="parsley" method="POST" action="{{path('maindb_detailsactivite')}}">
                            <input hidden readonly name="Id" required type="text" value="{{detailid}}"> 
                            <div class="modal-body">
                                <div style="margin-top: 30px;">
                                    <div class="form-group">
                                        <label for="inputPassword3" class="col-sm-2 control-label">Name : </label>
                                        <div class="col-sm-10">
                                            <input name="namenew" required type="text" class="form-control" id="inputPassword3" value="{{activite}}" required autofocus data-trigger="change" data-required="true">
                                        </div>
                                    </div>
                                    <div class="form-group" style="margin-top: 20px;">
                                        <label for="inputPassword3" class="col-sm-2 control-label">Nature(s) : </label>
                                        <div class="col-sm-10">
                                            <select multiple required class="form-control" name="nature[]" size="5" id="nature">
                                                {%if natures is defined%}
                                                    {%for nature in natures%}
                                                        {%if naturedetail is defined and nature == naturedetail %}
                                                            <option selected value="{{nature}}">{{nature}}</option>
                                                        {%else%}
                                                            <option  value="{{nature}}">{{nature}}</option>
                                                        {%endif%}
                                                    {%endfor%}
                                                {%endif%}
                                            </select>
                                        </div>
                                    </div>
                                    <br>
                                    Determined by subphase? <input type="checkbox" id="checkbox1"/>
                                    <div id="autoUpdate" class="autoUpdate" style="display : none;">
                                        <br>
                                        <div class="form-group" style="margin-top: 20px;">
                                            <label for="inputPassword3" class="col-sm-2 control-label">Phase</label>
                                            <div class="col-sm-10">
                                                <select class="form-control" name="phasenew" id="phase">
                                                    {%if phases is defined%}
                                                        <option selected value="{{defaultphase}}" id="" data-phase="">-- Select Phase --</option>
                                                        {%for phase in phases%}
                                                            <option  value="{{phase.id}}">{{phase.nom}}</option>
                                                        {%endfor%}
                                                    {%endif%}
                                                </select>
                                            </div>
                                        </div>
                                        <div class="form-group" >
                                            <label for="inputPassword3" class="col-sm-2 control-label">Sous phase</label>
                                            <div class="col-sm-10">
                                                <select class="form-control" name="ssphasenew" id="ssphase">
                                                    {%if ssphases is defined%}
                                                        <option selected value="" id="" data-phase="">-- Select Sous Phase --</option>
                                                        {%for ssphase in ssphases%}
                                                            <option
                                                                {%for ssphas in ssphase%}
                                                                    {%if ssphas.id is defined%}
                                                                        value="{{ssphas.id}}" id="{{ssphas.phaseId}}" data-phase="{{ssphas.phaseId}}"> {{ssphase.nom2}} | {{ssphas.nom}}
                                                                    {%endif%}
                                                                {%endfor%}
                                                            </option>
                                                        {%endfor%}
                                                    {%endif%}
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    {% if error is defined%}
                                        <div class="alert alert-danger" style="margin-top: 20px; text-align: center;">
                                            <strong style="text-align: center;">{{error}}</strong>
                                        </div>
                                    {% endif%}
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-primary">Save changes</button>
                            </div>
