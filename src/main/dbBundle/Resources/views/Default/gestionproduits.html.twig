                        <li><a href="{{path('maindb_logout')}}"><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>
                    </ul>

                </div>
            </nav>
        </div>

        <div class="container">

            <ul class="nav nav-tabs" role="tablist">
                <li><a href="{{path('maindb_gestionactivite')}}">Activite</a></li>
                <li><a href="{{path('maindb_gestionclients')}}">Client</a></li>
                <li><a href="{{path('maindb_gestioncomposants')}}">Composants</a></li>
                <li><a href="{{path('maindb_gestionpartenaires')}}">Partenaire</a></li>
                <li><a href="{{path('maindb_gestionphases')}}">Phase</a></li>
                <li><a href="{{path('maindb_gestionssphases')}}">Sous phase</a></li>
                <li><a href="{{path('maindb_gestionplateformes')}}">Plateforme</a></li>
                <li class="active"><a href="{{path('maindb_gestionproduits')}}">Produit</a></li>
                <li><a href="{{path('maindb_gestionservices')}}">Service</a></li>
                <li><a href="{{path('maindb_gestionsocietes')}}">Societe</a></li>
                <li><a href="{{path('maindb_gestionversions')}}">Version</a></li>

            </ul>
            {%if produits is defined%}
                <ul class="list-group" style="margin-top: 20px; display: block;
                    margin-left: auto;
                    margin-right: auto; text-align: center; width: 40%; ">
                    <li class="list-group-item list-group-item" style="background-image: -webkit-linear-gradient(top,#428bca 0,#2d6ca2 100%);
                        background-image: -o-linear-gradient(top,#428bca 0,#2d6ca2 100%);
                        background-image: -webkit-gradient(linear,left top,left bottom,from(#428bca),to(#2d6ca2));
                        background-image: linear-gradient(to bottom,#428bca 0,#2d6ca2 100%);
                        filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#ff428bca', endColorstr='#ff2d6ca2', GradientType=0);
                        filter: progid:DXImageTransform.Microsoft.gradient(enabled=false);
                        background-repeat: repeat-x;
                        border-color: #2b669a; color: white;">
                        Produits
                    </li>
                    {%if produits is iterable%}
                        {%for produit in produits%}
                            <li class="list-group-item ">{{produit.nom}} <a href="{{path('maindb_detailsprod',{'Id':produit.id})}}" title="Edit this item" class="btn">  <span class="glyphicon glyphicon-th-list" style="margin-left : 20px;"></span></a><a data-id="{{produit.nom}}" data-id2="{{produit.id}}" title="Delete this item" class="open-AddBookDialog btn" href="#addBookDialog"><span class="glyphicon glyphicon-remove"></span></a></li>
                                {%endfor%}
                            {%endif%}
                </ul>
            {%endif%}
            <div class="modal fade" id="addBookDialog">
                <div class="modal-dialog" >
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                            <h4 class="modal-title">Are you sure?</h4>
                        </div>
                        <form role="form" data-validate="parsley" method="POST" action="{{path('maindb_gestionproduits')}}">
                            <div class="modal-body">
                                <p>Do you really want to delete : </p>
                                <input readonly type="text" id="bookId" value="" style="border: none; width: 100%;"/>
                                <input hidden readonly type="text" name="todelete" id="bookId2" value=""/>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                                <button type="submit" class="btn btn-primary">Delete</button>
                            </div>
                        </form>
                    </div><!-- /.modal-content -->
                </div><!-- /.modal-dialog -->
            </div>

            <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal" align="center" style="margin-left: auto; margin-right: auto; display: block"><span class="glyphicon glyphicon-plus"></span>  Produit</button>
            <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-dialog" style="width: 700px;">
                    <form class="form-horizontal" role="form" data-validate="parsley" method="POST" action="{{path('maindb_gestionproduits')}}">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                                <h4 class="modal-title" id="myModalLabel">Add a produit</h4>
                            </div>
                            <div class="modal-body">
                                <div style="margin-top: 30px;">

                                    <div class="form-group">
                                        <label for="inputPassword3" class="col-sm-2 control-label">Name : </label>
                                        <div class="col-sm-10">
                                            <input name="namenewproduit" type="text" class="form-control" id="inputPassword3" placeholder="Produit name" required autofocus data-trigger="change" data-required="true">
                                        </div>
                                    </div>
                                    <hr>
                                    <p>A produit must have be linked to  composants,  plateformes and  versions.</p>
                                    <div class="form-group">
                                        <label for="inputPassword3" class="col-sm-2 control-label">Composant : </label>
                                        <div class="col-sm-10">
                                            <select multiple class="form-control " name="composantsselected[]" >
                                                {%if composants is iterable%}
                                                    <option value="">No component</option>
                                                    {%for composant in composants%}
                                                        <option value="{{composant.id}}">{{composant.nom}}</option>
                                                    {%endfor%}
                                                {%endif%}
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="inputPassword3" class="col-sm-2 control-label">Plateformes : </label>
                                        <div class="col-sm-10">
                                            <select multiple class="form-control " name="plateformesselected[]">
                                                {%if plateformes is iterable%}
                                                    <option value="">No plateform</option>
                                                    {%for plateforme in plateformes%}
                                                        <option value="{{plateforme.id}}">{{plateforme.nom}}</option>
                                                    {%endfor%}
                                                {%endif%}
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="inputPassword3" class="col-sm-2 control-label">Versions : </label>
                                        <div class="col-sm-10">
                                            <select multiple class="form-control " name="versionsselected[]">
                                                {%if versions is iterable%}
                                                    <option value="">No version</option>
                                                    {%for version in versions%}
                                                        <option value="{{version.id}}">{{version.numero}}</option>
                                                    {%endfor%}
                                                {%endif%}
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-primary">Save changes</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
