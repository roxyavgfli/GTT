                    </ul>
                    <ul class="nav navbar-nav navbar-left">
                        {%if roles is iterable%}
                            {%for role in roles%}
                                {%if role.nom == 'administrator' %}
                                    <li class="dropdown">
                                        <a  class="dropdown-toggle" data-toggle="dropdown" href="#"><span class="glyphicon glyphicon-download-alt"></span> Export <span class="caret"></span></a>
                                        <ul role="menu" class="dropdown-menu">
                                            <li><a href="{{path('maindb_exportsimpletask')}}">Export Simple Tasks</a></li>
                                        </ul>
                                    </li>
                                {%endif%}
                            {%endfor%}
                        {%endif%}
                    </ul> 
                    <ul class="nav navbar-nav navbar-right">
                        {%if roles is iterable%}
                            {%for role in roles%}
                                {%if role.nom == 'administrator' %}
                                    <li class="dropdown">
                                        <a  class="dropdown-toggle" data-toggle="dropdown" href="#"><span class="glyphicon glyphicon-fire"></span> Admin panel <span class="caret"></span></a>
                                        <ul role="menu" class="dropdown-menu">
                                            <li><a href="{{path('maindb_gestionuserlist',{'firstload':1})}}">Users management</a></li>
                                            <li class="divider"></li>
                                            <li class="active"><a href="{{path('maindb_gestionactivite')}}">Categories management</a></li>
                                            <li class="divider"></li>
                                            <li><a href="{{path('maindb_gestionteamlist')}}">Team management</a></li>
                                        </ul>
                                    </li>
                                {%endif%}
                            {%endfor%}
                        {%endif%}
                        <li><a href="{{path('maindb_profile')}}"><span class="glyphicon glyphicon-check"></span> connected as {{name}} {{surname}}</a></li>
                        <li><a href="{{path('maindb_logout')}}"><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>
                    </ul>

                </div>
            </nav>
        </div>
        {%if product is defined%}

            <div class="container">
                <ul class="nav nav-tabs" role="tablist">
                    <li><a href="{{path('maindb_gestionactivite')}}">Activite</a></li>
                    <li><a href="{{path('maindb_gestionclients')}}">Client</a></li>
                    <li><a href="{{path('maindb_gestioncomposants')}}">Composants</a></li>
                    <li><a href="{{path('maindb_gestionpartenaires')}}">Partenaire</a></li>
                    <li><a href="{{path('maindb_gestionphases')}}">Phase</a></li>
                    <li><a href="{{path('maindb_gestionssphases')}}">Sous phase</a></li>
                    <li><a href="{{path('maindb_gestionplateformes')}}">Plateforme</a></li>
                    <li class="active"><a href="#">Produit</a></li>
                    <li><a href="{{path('maindb_gestionservices')}}">Service</a></li>
                    <li><a href="{{path('maindb_gestionsocietes')}}">Societe</a></li>
                    <li><a href="{{path('maindb_gestionversions')}}">Version</a></li>

                </ul>

                <div class="list-group" style="margin-top : 20px;">
                    <li href="#" class="list-group-item active">
                        Details of product : {%for infos in product%}{%if infos.nom is defined%} {{infos.nom}} {%endif%}{%endfor%}
                    </li>
                    <li class="list-group-item">
                        Component(s) :
                        <ul>
                        {%for component in components%}{%if component.nom is defined%} <li>{{component.nom}}</li> {%endif%}{%endfor%} 
                    </ul>
                </li>
                <li class="list-group-item">
                    Plateform(s) : 
                    <ul>
                    {%for plateforme in plateforms%}{%if plateforme.nom is defined%} <li>{{plateforme.nom}}</li> {%endif%}{%endfor%}  
                </ul>
            </li>
            <li class="list-group-item">
                Version(s) :
                <ul>
                {%for version in versions2%}{%if version.numero is defined%} <li>{{version.numero}}</li> {%endif%}{%endfor%} 
            </ul>
        </li>

    </div>

    <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal" align="center" style="margin-left: auto; margin-right: auto; display: block"><span class="glyphicon glyphicon-pencil"></span>  Edit</button>

    <a href="{{path('maindb_gestionproduits')}}">Go back to list</a>

    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <h4 class="modal-title" id="myModalLabel">Edit product</h4>
                </div>
                <form class="form-horizontal" name="myform" role="form" data-validate="parsley" method="POST" action="{{path('maindb_detailsprod')}}">
                    <input hidden readonly name="Id" required type="text" value="{%if detailid is defined%} {{detailid}} {%endif%}"> 
                    <div class="modal-body">
                        <div style="margin-top: 30px;">
                            <div class="form-group">
                                <label for="inputPassword3" class="col-sm-2 control-label">Name : </label>
                                <div class="col-sm-10">
                                    <input name="namenewproduit" type="text" class="form-control" id="inputPassword3" value="{%for infos in product%}{%if infos.nom is defined%} {{infos.nom}} {%endif%}{%endfor%}" required autofocus data-trigger="change" data-required="true">
                                </div>
                            </div>
                            <hr>
                            <p>A produit must have be linked to  composants,  plateformes and  versions.</p>
                            <div class="form-group">
                                <label for="inputPassword3" class="col-sm-2 control-label">Composant : </label>
                                <div class="col-sm-10">
                                    <select multiple class="form-control " name="composantsselected[]">
                                        {%if components is iterable%}
                                            {%for component in components%}
                                                <option selected value="{{component.id}}">{{component.nom}}</option>
                                            {%endfor%}
                                        {%endif%}
                                        {%if compoleft is iterable%}
                                            {%for compleft in compoleft%}
                                                <option value="{{compleft.id}}">{{compleft.nom}}</option>
                                            {%endfor%}
                                        {%endif%}
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputPassword3" class="col-sm-2 control-label">Plateformes : </label>
                                <div class="col-sm-10">
                                    <select multiple class="form-control " name="plateformesselected[]">
                                        {%if plateforms is iterable%}
                                            {%for plateforme in plateforms%}
                                                <option selected value="{{plateforme.id}}">{{plateforme.nom}}</option>
                                            {%endfor%}
                                        {%endif%}
                                        {%if platleft is iterable%}
                                            {%for plateleft in platleft%}
                                                <option value="{{plateleft.id}}">{{plateleft.nom}}</option>
                                            {%endfor%}
                                        {%endif%}
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputPassword3" class="col-sm-2 control-label">Versions : </label>
                                <div class="col-sm-10">
                                    <select multiple class="form-control " name="versionsselected[]">
                                        {%if versions2 is iterable%}
                                            {%for version in versions2%}
                                                <option selected value="{{version.id}}">{{version.numero}}</option>
                                            {%endfor%}
                                        {%endif%}
                                        {%if versleft is iterable%}
                                            {%for versileft in versleft%}
                                                <option value="{{versileft.id}}">{{versileft.numero}}</option>
                                            {%endfor%}
                                        {%endif%}
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>       
{%endif%}
{% if error is defined%}
    <div class="alert alert-danger" style="margin-top: 20px; text-align: center;">
        <strong style="text-align: center;">{{error}}</strong>
    </div>
{% endif%}
