                    <ul class="nav navbar-nav">
                        {%if roles is iterable%}
                            {%for role in roles%}
                                {%if role.nom == 'user' %}
                                    <li class="dropdown">
                                        <a  class="dropdown-toggle" data-toggle="dropdown" href="#"><span class="glyphicon glyphicon-ok"></span> Time Report <span class="caret"></span></a>
                                        <ul role="menu" class="dropdown-menu">
                                            <li><a href="{{path('maindb_gestionsimplereport')}}">Simple time report</a></li>
                                        </ul>
                                    </li>
                                {%endif%}
                            {%endfor%}
                        {%endif%}
                    </ul>
                    <ul class="nav navbar-nav navbar-left">
                        {%if roles is iterable%}
                            {%for role in roles%}
                                {%if role.nom == 'administrator' %}
                                    <li class="dropdown">
                                        <a  class="dropdown-toggle" data-toggle="dropdown" href="#"><span class="glyphicon glyphicon-download-alt"></span> Export <span class="caret"></span></a>
                                        <ul role="menu" class="dropdown-menu">
                                            <li><a href="{{path('maindb_exportsimpletask')}}">Export Simple Tasks</a></li>
                                        </ul>
                                    </li>
                                {%endif%}
                            {%endfor%}
                        {%endif%}
                    </ul> 
                    <ul class="nav navbar-nav navbar-right">
                        {%if roles is iterable%}
                            {%for role in roles%}
                                {%if role.nom == 'administrator' %}
                                    <li class="dropdown">
                                        <a  class="dropdown-toggle" data-toggle="dropdown" href="#"><span class="glyphicon glyphicon-fire"></span> Admin panel <span class="caret"></span></a>
                                        <ul role="menu" class="dropdown-menu">
                                            <li><a href="{{path('maindb_gestionuserlist',{'firstload':1})}}">Users management</a></li>
                                            <li class="divider"></li>
                                            <li><a href="{{path('maindb_gestionactivite')}}">Categories management</a></li>
                                            <li class="divider"></li>
                                            <li class="active"><a href="{{path('maindb_gestionteamlist')}}">Team management</a></li>
                                        </ul>
                                    </li>
                                {%endif%}
                            {%endfor%}
                        {%endif%}
                        <li><a href="{{path('maindb_profile')}}"><span class="glyphicon glyphicon-check"></span> connected as {{name}} {{surname}}</a></li>
                        <li><a href="{{path('maindb_logout')}}"><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>
                    </ul>

                </div>
            </nav>
        </div>

        <div class="container">

            <ul class="nav nav-tabs " role="tablist">
                <li class="active"><a href="#">Team management</a></li>
                <li><a href="{{path('maindb_gestionteamcreate')}}">Create team</a></li>
            </ul>


            {%for societe in societes%}
                <ul class="list-group" style="margin-top: 20px; display: block;
                    margin-left: auto;
                    margin-right: auto; text-align: center; width: auto; ">
                    <li class="list-group-item list-group-item" style="background-image: -webkit-linear-gradient(top,#428bca 0,#2d6ca2 100%);
                        background-image: -o-linear-gradient(top,#428bca 0,#2d6ca2 100%);
                        background-image: -webkit-gradient(linear,left top,left bottom,from(#428bca),to(#2d6ca2));
                        background-image: linear-gradient(to bottom,#428bca 0,#2d6ca2 100%);
                        filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#ff428bca', endColorstr='#ff2d6ca2', GradientType=0);
                        filter: progid:DXImageTransform.Microsoft.gradient(enabled=false);
                        background-repeat: repeat-x;
                        border-color: #2b669a; color: white;">
                        Company : {{societe.nom}}
                    </li>
                    {%for service in services%}
                        {%if service.societeId == societe.id%}
                            <ul class="list-group" style="margin-top: 20px; display: table-cell;
                                margin-left: auto;
                                margin-right: auto; text-align: center; width: auto; ">
                                <li class="list-group-item list-group-item" style="background-image: -webkit-linear-gradient(top,#428bca 0,#2d6ca2 100%);
                                    background-image: -o-linear-gradient(top,#428bca 0,#2d6ca2 100%);
                                    background-image: -webkit-gradient(linear,left top,left bottom,from(#428bca),to(#2d6ca2));
                                    background-image: linear-gradient(to bottom,#428bca 0,#2d6ca2 100%);
                                    filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#ff428bca', endColorstr='#ff2d6ca2', GradientType=0);
                                    filter: progid:DXImageTransform.Microsoft.gradient(enabled=false);
                                    background-repeat: repeat-x;
                                    border-color: #2b669a; color: white;">
                                    Service : {{service.nom}}
                                </li>
                                {%for equipe in equipes%}
                                    {%if equipe.serviceId == service.id%}
                                        <li class="list-group-item "><a href="{{path('maindb_teamdetails',{'id':equipe.id})}}">{{equipe.nom}}</a><a data-id="{{equipe.nom}}" data-id2="{{equipe.id}}" title="Delete this team" class="open-AddBookDialog btn" href="#addBookDialog"><span class="glyphicon glyphicon-remove"></span></a></li>
                                            {%endif%}
                                        {%endfor%}
                            </ul>
                        {%endif%}
                    {%endfor%}

                </ul>
            {%endfor%}


            <!-- /container -->
            <!-- Modal -->
            <div class="modal fade" id="addBookDialog">
                <div class="modal-dialog" >
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                            <h4 class="modal-title">Are you sure?</h4>
                        </div>
                        <form role="form" data-validate="parsley" method="POST" action="{{path('maindb_gestionteamlist')}}">
                            <div class="modal-body">
                                <p>Do you really want to delete the team : </p>
                                <input readonly type="text" id="bookId" value="" style="border: none;"/>
                                <p>This will cause all users from the team not to have one anymore.</p>
                                <input hidden readonly type="text" name="todelete" id="bookId2" value=""/>
                                <input hidden readonly type="text" name="firstload" value="1"/>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                                <button type="submit" class="btn btn-primary">Delete</button>
                            </div>
                        </form>
                    </div><!-- /.modal-content -->
                </div><!-- /.modal-dialog -->
            </div>



